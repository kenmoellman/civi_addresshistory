<?xml version="1.0"?>
<extension key="com.moellman.addresshistory" type="module">
  <file>addresshistory</file>
  <name>Address History</name>
  <description>Tracks historical addresses for contacts with start and end dates using database triggers</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Ken Moellman</author>
    <email>civicrm@moellman.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/kenmoellman/civi_addresshistory</url>
    <url desc="Documentation">https://github.com/kenmoellman/civi_addresshistory</url>
    <url desc="Support">https://github.com/kenmoellman/civi_addresshistory/issues</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-07-21</releaseDate>
  <version>0.9.0</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>6.0</ver>
  </compatibility>
  <comments>This extension tracks address history for contacts using database triggers. Requires CiviCRM 6.0+ for latest compatibility.</comments>
  <civix>
    <namespace>CRM/Addresshistory</namespace>
    <format>24.02.1</format>
    <angularModule>crmAddresshistory</angularModule>
    <apiVersion>4</apiVersion>
  </civix>
  <sql>
    <file>sql/install.sql</file>
    <file>sql/uninstall.sql</file>
  </sql>
</extension>
